<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_Exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marcellus"
        android:text="Exercise"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_ExerciseType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Running, Swimming, Weights, etc."
        android:layout_below="@+id/tv_Exercise"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_CaloriesBurned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marcellus"
        android:text="Calories Burned"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/et_ExerciseType"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/et_CaloriesBurned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="kcal"
        android:layout_below="@+id/tv_CaloriesBurned"
        android:layout_alignParentStart="true"/>

</RelativeLayout>